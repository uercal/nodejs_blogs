#crop-avatar.container
	// Current avatar
	//- .avatar-view(title='Change the avatar')
	//- 	img(src='/images/upload.jpg', alt='Avatar')
	// Cropping modal
	#avatar-modal
		.modal-dialog.modal-lg			
			form.avatar-form(action='/changeHead', enctype='multipart/form-data', method='post')
				.modal-header					
					h4#avatar-modal-label.modal-title Change Avatar
				.modal-body
					.avatar-body
						// Upload image and data
						.avatar-upload
							input.avatar-src(type='hidden', name='avatar_src')
							input.avatar-data(type='hidden', name='avatar_data')
							label(for='avatarInput') Local upload
							input#avatarInput.avatar-input(type='file', name='avatar_file')
						// Crop and preview
						.row
							.col-md-9
								.avatar-wrapper
							.col-md-3
								.avatar-preview.preview-lg
								.avatar-preview.preview-md
								.avatar-preview.preview-sm
						.row.avatar-btns
							.col-md-9
								.btn-group
									button.btn.btn-primary(type='button', data-method='rotate', data-option='-90', title='Rotate -90 degrees') Rotate Left
									button.btn.btn-primary(type='button', data-method='rotate', data-option='-15') -15deg
									button.btn.btn-primary(type='button', data-method='rotate', data-option='-30') -30deg
									button.btn.btn-primary(type='button', data-method='rotate', data-option='-45') -45deg
								.btn-group
									button.btn.btn-primary(type='button', data-method='rotate', data-option='90', title='Rotate 90 degrees') Rotate Right
									button.btn.btn-primary(type='button', data-method='rotate', data-option='15') 15deg
									button.btn.btn-primary(type='button', data-method='rotate', data-option='30') 30deg
									button.btn.btn-primary(type='button', data-method='rotate', data-option='45') 45deg
							.col-md-3
								button.btn.btn-primary.btn-block.avatar-save(type='submit') Done					
	.loading(aria-label='Loading', role='img', tabindex='-1')
script(src='https://code.jquery.com/jquery-1.12.4.min.js')
script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
script(src='/js/cropper.min.js')
script(src='/js/head.js')