include ./layout.jade

#fh5co-main
	.fh5co-narrow-content
		h2.fh5co-heading.animate-box(data-animate-effect='fadeInLeft') Read Our Blog
		.row.row-bottom-padded-md
			-var blog = recent
			each val,index in blog
				.col-md-3.col-sm-6.col-padding.animate-box(data-animate-effect='fadeInLeft')
					.blog-entry
						a.blog-img(href='/main/detail/#{val._id}')
							img.img-responsive(src="#{val.background}", alt='Free HTML5 Bootstrap Template by FreeHTML5.co')
						.desc
							h3
								a(href='#') #{val.title}
							span
								small  by #{val.author} 
								small  /
								small
									i.icon-comment !{val.created}
							p
							a.lead(href='/main/detail/#{val._id}') Read More
								i.icon-arrow-right3
	#get-in-touch
		.fh5co-narrow-content
			.row
				.col-md-4.animate-box(data-animate-effect='fadeInLeft')
					h1.fh5co-heading-colored Get in touch
			.row
				.col-md-6.col-md-offset-3.col-md-pull-3.animate-box(data-animate-effect='fadeInLeft')
					p.fh5co-lead
					p
						a.btn.btn-primary(href='#') Learn More

include ./js.jade