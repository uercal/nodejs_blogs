include ./layout.jade

.fh5co-loader
#page
	#fh5co-aside(style='background-image: url(/images/image_1.jpg)')
		.overlay
		nav(role='navigation')
			ul
				li
					a(href='/' title='Home')
						i.icon-home
			br
			ul
				li
					a(href='/main/add' title='Add' id="add")
						i.icon-plus
		.featured
			span admin
			h2 Uercal


#fh5co-main-content
	.fh5co-post
		- var blogs = data
		each val,index in blogs
			.fh5co-entry.padding
				img(src='images/project-1.jpg', title='Free HTML5 Bootstrap Template by FreeHTML5.co')
				div
					span.fh5co-post-date #{val.created}
					h2
						a(href='/main/detail/#{val._id}') #{val.title}
					p
		footer
			div

.gototop.js-top
	a.js-gotop(href='#')
		i.icon-arrow-up

include ./js.jade