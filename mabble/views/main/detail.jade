include ./layout.jade

.single
	.fh5co-loader
	#page
		#fh5co-aside(style='background-image: url("#{blog.background}");', data-stellar-background-ratio='0.5')
			.overlay
			nav(role='navigation')
				ul
					li
						a(href='/main')
							i.icon-home
			.page-title
				img(src='/images/person_1.jpg', alt='Free HTML5 by FreeHTMl5.co')
				span #{blog.created}
				h2 #{blog.title}
		#fh5co-main-content
			.fh5co-post
				.fh5co-entry.padding
					div
						p #{blog.content}
	.fh5co-navigation
		.fh5co-cover.prev.fh5co-cover-sm(style='background-image: url(/images/project-4.jpg)')
			.overlay
			a.copy(href='#')
				.display-t
					.display-tc
						div
							span Previous Post
							h2 How to be an affective web developer
		.fh5co-cover.next.fh5co-cover-sm(style='background-image: url(/images/project-5.jpg)')
			.overlay
			a.copy(href='#')
				.display-t
					.display-tc
						div
							span Next Post
							h2 How to be an affective web developer
	footer
		div
			a(href='', target='_blank') FreeHTML5
	.gototop.js-top
		a.js-gotop(href='#')
			i.icon-arrow-up

include ./js.jade